---
import { getCollection } from "astro:content";
import Icon from "./Icon.astro";

// Fetch the 3 most recent blog posts
const blogPosts = (await getCollection("blog"))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<section class="latest-posts">
  <div class="header">
    <Icon
      icon="pencil-line"
      color="var(--accent-regular)"
      size="2rem"
      gradient
    />
    <h2>Latest Posts</h2>
  </div>

  <div class="posts-grid">
    {
      blogPosts.map((post) => (
        <a href={`/blog/${post.slug}`} class="post-card">
          <div class="post-image">
            <img
              src={post.data.img || "/assets/stock-1.jpg"}
              alt={post.data.img_alt || post.data.title}
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="post-content">
            <h3 class="post-title">{post.data.title}</h3>
            <p class="post-description">{post.data.description}</p>
            <div class="post-meta">
              <time datetime={post.data.publishDate.toISOString()}>
                {post.data.publishDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </time>
              {post.data.timeToRead && (
                <span class="time-to-read">
                  {post.data.timeToRead} min read
                </span>
              )}
            </div>
          </div>
        </a>
      ))
    }
  </div>
</section>

<style>
  .latest-posts {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .header h2 {
    font-size: var(--text-2xl);
    color: var(--gray-100);
    margin: 0;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-card {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all var(--theme-transition);
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent-dark);
  }

  .post-image {
    flex-shrink: 0;
    width: 120px;
    height: 120px;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
    min-width: 0;
  }

  .post-title {
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--gray-100);
    margin: 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-description {
    color: var(--gray-300);
    font-size: var(--text-sm);
    line-height: 1.4;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: auto;
    font-size: var(--text-xs);
    color: var(--gray-400);
  }

  .time-to-read {
    color: var(--gray-500);
  }

  @media (min-width: 50em) {
    .latest-posts {
      gap: 2.5rem;
    }

    .header h2 {
      font-size: var(--text-3xl);
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    .post-card {
      flex-direction: column;
      padding: 0;
      overflow: hidden;
    }

    .post-image {
      width: 100%;
      height: 180px;
    }

    .post-content {
      padding: 1.5rem;
      gap: 0.75rem;
    }

    .post-title {
      font-size: var(--text-xl);
      -webkit-line-clamp: 2;
    }

    .post-description {
      font-size: var(--text-base);
      -webkit-line-clamp: 3;
    }
  }

  @media (max-width: 768px) {
    .post-image {
      width: 100px;
      height: 100px;
    }

    .post-title {
      font-size: var(--text-base);
    }

    .post-description {
      font-size: var(--text-xs);
    }
  }
</style>
