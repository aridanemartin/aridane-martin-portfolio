---
import { Image } from "astro:assets";
import flagIcon from "../../public/assets/icons/flag.png";

const { content } = Astro.props;
---

<ul class="timeline-list">
  {
    content.map((item) => (
      <li class="timeline-item">
        <div class="timeline-item-content">
          <div class="timeline-title-wrapper">
            <Image
              class="timeline-flag-icon"
              src={flagIcon}
              alt="flag"
              width={35}
              height={35}
            />
            <div class="timeline-title-text">
              <h2 class="timeline-title">{item.title}</h2>
              <p class="timeline-year">{item.year}</p>
            </div>
          </div>
          <p class="timeline-item-description">{item.description}</p>
          <Image
            src={item.image}
            alt={item.imageDescription}
            class="timeline-item-image"
            width={300}
            height={40}
            loading="lazy"
          />
          <p class="timeline-item-image-description">{item.imageDescription}</p>
        </div>
      </li>
    ))
  }
</ul>

<style>
  .timeline-list {
    list-style: none;
    padding: 0;
    margin: 0;
    position: relative;
    display: flow-root; /* contain floated children so ::before spans full height */
  }

  /* Single continuous dashed line down the center */
  .timeline-list::before {
    content: '';
    position: absolute;
    left: calc(50% - 1px);
    top: 0;
    bottom: 0;
    width: 2px;
    background-image: repeating-linear-gradient(
      to bottom,
      var(--gray-200) 0px,
      var(--gray-200) 6px,
      transparent 6px,
      transparent 12px
    );
  }

  @keyframes reveal-from-right {
    from {
      opacity: 0;
      transform: translateX(3rem);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes reveal-from-left {
    from {
      opacity: 0;
      transform: translateX(-3rem);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .timeline-item {
    width: 50%;
    padding-bottom: 50px;
    position: relative;

    /* Dot marker at the center line */
    &::before {
      content: '';
      position: absolute;
      top: 1.5rem;
      z-index: 1;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: var(--accent-regular);
      border: 2px solid var(--gray-999);
    }

    &:nth-child(odd) {
      float: right;
      clear: both;
      animation: reveal-from-right linear both;
      animation-timeline: view();
      animation-range: entry 5% entry 50%;

      &::before {
        left: -5px;
      }
    }

    &:nth-child(even) {
      float: left;
      clear: both;
      animation: reveal-from-left linear both;
      animation-timeline: view();
      animation-range: entry 5% entry 50%;

      &::before {
        right: -5px;
      }
    }

    &:first-child .timeline-item-content {
      margin-top: 0;
    }
  }

  .timeline-flag-icon {
    filter: var(--icon-accent-filter);
  }

  .timeline-title-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .timeline-title {
    font-size: var(--text-lg);
    background: linear-gradient(to right, #ca7879, var(--accent-regular), var(--accent-dark), #ca7879);
    background-size: 200% auto;
    background-position: 0% center;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: background-position 0.4s ease;
  }

  :global(.theme-dark) .timeline-title {
    background-position: 100% center;
  }

  .timeline-item:hover .timeline-title {
    background-position: 100% center;
  }

  :global(.theme-dark) .timeline-item:hover .timeline-title {
    background-position: 0% center;
  }

  .timeline-item-content {
    margin-top: -300px;
    padding: 1rem;
  }

  .timeline-item-description {
    margin: 16px 0;
  }

  .timeline-item-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .timeline-item-image-description {
    font-style: italic;
    font-size: 12px;
    color: var(--gray-200);
    margin-top: 0.5rem;
  }

  @keyframes reveal-from-bottom {
    from {
      opacity: 0;
      transform: translateY(2rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (width < 768px) {
    .timeline-list::before {
      left: 0;
    }

    .timeline-item {
      width: 100%;
      padding-left: 1.5rem;

      &:nth-child(odd),
      &:nth-child(even) {
        animation-name: reveal-from-bottom;
        animation-range: entry 20% entry 60%;

        &::before {
          left: -5px;
          right: auto;
        }
      }
    }

    .timeline-item-content {
      margin-top: 0;
    }
  }
</style>
