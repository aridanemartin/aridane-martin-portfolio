---
import { Image } from "astro:assets";

const { content } = Astro.props;
---

<ul class="timeline-list">
  {
    content.map((item) => (
      <li class="timeline-item">
        <div class="timeline-item-content">
          <h2>{item.title}</h2>
          <p>{item.year}</p>
          <p class="timeline-item-description">{item.description}</p>
          <Image
            src={item.image}
            alt={item.imageDescription}
            class="timeline-item-image"
            width={300}
            height={40}
          />
          <p class="timeline-item-image-description">{item.imageDescription}</p>
        </div>
      </li>
    ))
  }
</ul>

<style>
  .timeline-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .timeline-item {
    width: calc(50% + 1.5px); /* 50% + 3px border */
    padding-bottom: 50px;
    position: relative;

    &:nth-child(odd) {
      float: right;
      clear: both;
      border-left: 3px solid var(--gray-200);
    }

    &:nth-child(even) {
      float: left;
      clear: both;
      border-right: 3px solid var(--gray-200);
    }
  }

  .timeline-item-content {
    padding: 1rem;
  }

  .timeline-item-description {
    margin: 16px 0;
  }

  .timeline-item-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .timeline-item-image-description {
    font-style: italic;
    font-size: 12px;
    color: var(--gray-200);
    margin-top: 0.5rem;
  }

  @media (width < 768px) {
    .timeline-item {
      border-left: 3px solid var(--gray-200);
      width: 100%;

      &:nth-child(even) {
        border-right: none;
      }
    }
  }
</style>
