---
import { Image } from "astro:assets";

const { content } = Astro.props;
---

<ul class="timeline-list">
  {
    content.map((item) => (
      <li class="timeline-item">
        <div class="timeline-item-content">
          <h2>{item.title}</h2>
          <p>{item.year}</p>
          <p>{item.description}</p>
          {/* <Image src={item.image} alt={item.alt} width={100} height={20} /> */}
        </div>
      </li>
    ))
  }
</ul>

<style>
  .timeline-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .timeline-item {
    width: calc(50% + 1.5px); /* 50% + 3px border */
    padding-bottom: 50px;
    position: relative;

    &:nth-child(odd) {
      float: right;
      text-align: right;
      clear: both;
      border-left: 3px solid var(--gray-200);
    }

    &:nth-child(even) {
      float: left;
      text-align: left;
      clear: both;
      border-right: 3px solid var(--gray-200);
    }
  }
</style>
