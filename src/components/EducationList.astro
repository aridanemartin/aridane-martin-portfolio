---
import { Image } from 'astro:assets';
import { educationContent } from '../content/about/educationContent';
import EducationItem from './EducationItem.astro';

const firstItems = educationContent.slice(0, 3);
const restItems = educationContent.slice(3);
---

<ul class="education-item-list">
  {firstItems.map((item) => <EducationItem {...item} />)}
  <details>
    <summary> See more... </summary>
  </details>
  <ul class="education-item-list details-content">
    {restItems.map((item) => <EducationItem {...item} />)}
  </ul>
</ul>

<style>
  details summary {
    display: inline-flex;
    align-items: center;
    gap: 0.8em;
    font-size: var(--text-base);
    font-weight: 600;
    line-height: 1.1;
    list-style: none;
    background: linear-gradient(to right, #ca7879, var(--accent-regular), var(--accent-dark), #ca7879);
    background-size: 200% auto;
    background-position: 0% center;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: background-position 0.4s ease;
    cursor: pointer;
  }

  :global(.theme-dark) details summary {
    background-position: 100% center;
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details summary:hover,
  details summary:focus-visible {
    background-position: 100% center;
  }

  :global(.theme-dark) details summary:hover,
  :global(.theme-dark) details summary:focus-visible {
    background-position: 0% center;
  }

  .education-item-list {
    display: flex;
    flex-direction: column;
    padding: 0;
    margin: 0;
    gap: 30px;
  }

  .details-content {
    display: flex;
    flex-direction: column;
    gap: 30px;
    height: 0;
    overflow: hidden;
    transition: all 1s ease;
  }

  details[open] + .details-content {
    height: 650px;
  }

  details[open] {
    display: none;
  }

  @media (width > 800px) {
    details[open] + .details-content {
      height: 700px;
    }
  }
</style>
