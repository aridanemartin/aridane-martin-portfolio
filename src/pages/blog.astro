---
import BlogList from '../components/BlogList.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Blog | Aridane Martín"
  description="Read about development, productivity, and insights from Aridane Martín's experience"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="Blog"
        tagline="Thoughts on development, productivity, and the craft of software engineering."
        align="start"
      />
      <BlogList />
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
